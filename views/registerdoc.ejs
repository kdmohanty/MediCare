<%- include('partials/header') %>
<div class="container mt-5">
 <h1>Register (for doctors)</h1>

 <div class="row">
   <div class="col-sm-8">
     <div class="card">
       <div class="card-body">

         <!-- Makes POST request to /register route -->
         <form action="/registerdoc" method="POST">
           <div class="form-group">
             <label for="email">Email</label>
             <input type="email" class="form-control" name="username">
           </div>
           <div class="form-group">
             <label for="password">Password</label>
             <input type="password" class="form-control" name="password">
           </div>
           <div class="form-group">
             <label for="CityLocation">CityLocation</label>
             <input type="CityLocation" class="form-control" name="CityLocation">
           </div>
           <!-- <div class="form-group">
             <label for="ptdr">Patient/Doctor</label>
             <input type="ptdr" class="form-control" name="ptdr">
           </div> -->
           <div class="form-group">
             <label for="Hoursperday">Hours per day</label>
             <input type="number" class="form-control" name="Hoursperday">
           </div>
           <div class="form-group">
             <label for="Patientsperhr">Patients per hr</label>
             <input type="number" class="form-control" name="Patientsperhr">
           </div>
           <button type="submit" class="btn btn-dark">Register (for doctors)</button>
         </form>

       </div>
     </div>
   </div>

