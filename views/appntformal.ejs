<%- include('partials/header') %>
<!-- <div class="box"> -->

<h3 class="centrtxt a6" style="
    margin-bottom: 0px; height : 3rem; padding-top:11px;">Appointment ID = <%=appnt_id%></h3>
<div class="row">

<div class="col-lg-6 centrtxt a1 ">
  <h3 style="color:#ff9f2e; text-decoration: underline;">Symptoms</h3>
<%  newListItems2.forEach(function(item){ %>


    <div class="item">

      <p class = " fntclr"><%=item.name%></p>
    </div>


<%  }) %>



    <form class="item" action="/<%=appnt_id%>" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value=" <%=appnt_id%> " class="btn btn-outline-primary">+</button>
    </form>
  </div>
  <div class="col-lg-6 centrtxt a2">
<h3 style="color:#ff9f2e;text-decoration: underline;">Keep This Updated!</h3>
  <!-- weight -->
    <div class="item">

      <p class="pehla fntclr">Weight : <%=weight%></p>
    </div>
    <form class="item" action="/<%=appnt_id%>/weight" method="post">
      <input type="text" name="updateweight" placeholder="Weight" autocomplete="off" class="dusra">
      <button type="submit" name="weight" value=" <%=appnt_id%> " class="btn btn-outline-primary ">Update Weight</button>
    </form>
    <!-- height -->
    <div class="item">

      <p class="pehla fntclr">Height : <%=height%></p>
    </div>
    <form class="item" action="/<%=appnt_id%>/height" method="post">
      <input type="text" name="updateheight" placeholder="Height" autocomplete="off" class="dusra">
      <button type="submit" name="height" value=" <%=appnt_id%> " class="btn btn-outline-primary ">Update Height</button>
    </form>
    <!-- bloodpressure -->
    <div class="item">

      <p class="pehla fntclr">BloodPressure : <%=bloodpressure%></p>
    </div>
    <form class="item" action="/<%=appnt_id%>/bloodpressure" method="post">
      <input type="text" name="updatebloodpressure" placeholder="Bloodpressure" autocomplete="off" class="dusra">
      <button type="submit" name="bloodpressure" value=" <%=appnt_id%> " class="btn btn-outline-primary ">Update BloodPressure</button>
    </form>
    <p><a href="/<%=appnt_id%>/graph">Graphical Representation</a></p>
  </div>
</div>


