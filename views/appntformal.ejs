				<input type="file" id="image"
					name="image" value="" required>
			</div>
			<div>
				<button type="submit" class="btn btn-outline-primary">Submit</button>
			</div>
		</form>
	</div>

	<!-- <hr> -->
<form class="" action="/<%=appnt_id%>/renderimg" method="post">
